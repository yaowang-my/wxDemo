.post-image{
  width: 100%;
  height: 400rpx;
  border-radius: 4px 4px 0px 0px;
  /* margin:10rpx; */
}
.post-date{
  font-size: 26rpx;
  margin-bottom: 10px;

}
.post-title{
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-left:10px;

}
.post-content{
  color: #666;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;

}
.post-like{
  display: flex;
  flex-direction: row;
  font-size: 13px;
  line-height: 16px;
  align-items: center;
  margin-left: 10px;

}
.post-like image{
  height: 16px;
  width: 16px;
  margin-right: 8px;

}
.post-like text{
  margin-right: 20px;
  margin-top: 20rpx;
}