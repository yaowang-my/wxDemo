.post-container{
  display: flex;
  flex-direction: column;
  margin:20rpx 0rpx 40rpx;
  background-color: #fff;
  border-bottom:1px solid #ededed;
  border-top: 1px solid  #ededed;
  padding-bottom: 5px;
  padding-right:10rpx;
  padding-left:10rpx;
  box-sizing: border-box;
}
.post-author-date{
  margin:40rpx 0 20rpx 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post-author-date image{
  width: 60rpx;
  height: 60rpx;
}
.post-author-date text{
  margin-left: 20px;
}
/* .post-img { */
