/* pages/post/post-detail/post-detail.wxss */
.container{
  display: flex;
  flex-direction: column;
}
.head-image{
  width: 750rpx;
  height: 460rpx;
}
.title{
  font-size:20px;
  margin:30rpx;
  letter-spacing: 2px;
  color:#4b556c;

}
.author-date{
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
  margin-left: 30rpx;
  align-items: center;
  justify-content: space-between;
  font-style: 13rpx;

}
.author-box{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
   
}
.avatar{
  height: 50rpx;
  width: 50rpx;
}
.author{
  font-weight: 400;
  color: #666;
  margin-left: 20rpx ;
}
.date{

  color: #919191;
  margin-right: 38rpx;
  position: absolute;
  right: 0px;
}
.detail{
  color: #666666;
  margin:40rpx 22rpx 0;
  line-height: 44rpx;
  letter-spacing: 1px;
  font-style: 14px;
}
.tool{
  height: 64rpx;
  /* text-align: center; */
  /* line-height: 64rpx; */
  display: flex;
  flex-direction: row;
  margin:20rpx 28rpx 20rpx 0;
  font-size: 16px;
 

}
.tool-item{
  display: inline-block;
  vertical-align: top;
  margin-left: 20rpx;
  
}
.tool-item image{
  height: 16px;
  width: 16px;
  vertical-align: -3rpx; 
   margin-right: 10rpx;
}
.comment image{
  transform:scale(.85)
}